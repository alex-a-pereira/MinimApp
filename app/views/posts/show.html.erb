<h3 class="center-align">Nice content!</h3>

<div class="row">
  <div class="col s12 l10 offset-l1">
    <div class="card-panel">
      <blockquote style="border-left: 5px solid #9575cd">
        <i>
          "<%= @post.content %>"
          <br>
          <b class="right">
            -
            <%= @post.name %>
          </b>
        </i>
      </blockquote>
      <br>
      <hr>
      <%= link_to "Back home", home_path, :class => "btn btn-small deep-purple lighten-2" %>
      <%= link_to "Edit", edit_post_path(@post), :class => "btn btn-small deep-purple lighten-2" %>
      <%= link_to "Delete", post_path(@post), 
        method: "delete",
        data: {confirm: "Are you sure?"},     
        :class => "btn btn-small red lighten-2 right" %>
  </div>
</div>